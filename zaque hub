    end
})

Tabs.Visual:AddToggle("EspLineToggle", {
    Title = "ESP Line",
    Description = "Ative ou desative as linhas de ESP entre jogadores",
    Default = false,
    Callback = function(state)
        if state then
            ativarESPLine()
